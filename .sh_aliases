alias gti='git'
alias dc='cd'

# some ls aliases
alias ls="exa --icons --group-directories-first"
alias ll="exa --icons --group-directories-first -l"
alias la="exa --icons --group-directories-first -la"
alias lt="exa --icons --group-directories-first -T"
alias lt2="exa --icons --group-directories-first -T --level=2"

alias less='less -R'
alias dd='dd status=progress'

alias repos='cd ~/repos; la'

# docker aliases
alias dcp='docker-compose -f /opt/docker-compose.yml '
alias dcpull='docker-compose -f /opt/docker-compose.yml pull'
alias dclogs='docker-compose -f /opt/docker-compose.yml logs -tf --tail="50" '
alias dtail='docker logs -tf --tail="50" "$@"'
